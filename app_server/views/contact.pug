extends layout

block content
  .base-page.bg-light
    .container
      .row
        .col-lg-10.offset-lg-1
          h3.mb-3 #{title}
          .bg-white.shadow.rounded
            .row
              .col-md-7.pe-0
                .form-left.h-100.py-5.px-5
                  form.row.g-4(action='')
                    .col-12
                      label
                        | Subject
                        span.text-danger *
                      .input-group
                        .input-group-text
                          i.bi.bi-person-fill
                        input.form-control(type='hidden' placeholder='Enter Subject')
                        label
                        | -> Sobre que te Gustaria Preguntar
                    .col-12
                      label
                        | Description
                        span.text-danger *
                      .input-group
                        .input-group-text
                          i.bi.bi-lock-fill
                        input.form-control(type='hidden' rows="10" placeholder='Enter Description')
                        label
                        | -> Detalla Tus Dudas
                    .col-12
                      label
                        | Email
                        span.text-danger *
                      .input-group
                        .input-group-text
                          i.bi.bi-person-fill
                        input.form-control(type='hidden' placeholder='Enter Your Email')
                        label
                        | -> Deja tu correo parapoder contactarte
                    .col-12
                      //button.btn.btn-primary.px-4.float-end.mt-4(type='submit') Report
                      -const from = 'hpaulsalazar96@gmail.com'
                      a.btn.btn-outline-primary(role="button",href=`mailto:${from}?subject=123&body=345`, target='_blank', ...) Send Email
              .col-md-5.ps-0.d-none.d-md-block
                .form-right.h-100.bg-primary.text-white.text-center.pt-5
                  i.bi.bi-bootstrap
                  h2.fs-1 #{message}
                  br
                  p #{description}
          p.text-end.text-secondary.mt-3 A Henry and Ignacio Project
