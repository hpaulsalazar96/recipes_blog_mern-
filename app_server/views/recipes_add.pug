extends layout

block content
  .base-page.bg-light
    .container
      .row
        .col-lg-10.offset-lg-1
          h3.mb-3 #{title}
          .bg-white.shadow.rounded
            .row
              .col-md-7.pe-0
                .form-left.h-100.py-5.px-5
                  form.row.g-4(action, method="post", role="form")
                    .col-12
                      label
                        | Title
                        span.text-danger *
                      .input-group
                        .input-group-text
                          i.bi.bi-person-fill
                        input.form-control(type='text' name="title" placeholder='Enter Title')
                    .col-12
                      label
                        | Author
                        span.text-danger *
                      .input-group
                        .input-group-text
                          i.bi.bi-person-fill
                        input.form-control(type='text' name="author" placeholder='Enter Author')
                    .col-12
                      label
                        | Related Issues
                        span.text-danger *
                      .input-group
                        .input-group-text
                          i.bi.bi-person-fill
                        select#relatedIssues.form-select(name="relatedIssues", multiple, aria-label="multiple select issues")
                          //option(selected) Select Issues
                          option(value="Diabetes") Diabetes
                          option(value="Anemia") Anemia
                          option(value="Obesidad") Obesidad
                          option(value="Posparto") Posparto
                          option(value="Issue 1") Issue 1
                          option(value="Issue 2") Issue 2
                          option(value="Issue 3") Issue 3
                    .col-12
                      label
                        | Description
                        span.text-danger *
                      .input-group
                        .input-group-text
                          i.bi.bi-lock-fill
                        input.form-control(type='text' name="description" placeholder='Description')
                    .col-12
                      label
                        | Select the principal ingredient
                        span.text-danger *
                      .input-group
                        .input-group-text
                          i.bi.bi-person-fill
                        select#ingredients.form-select(name="ingredients", multiple, aria-label="multiple select issues")
                          //option(selected) Select Issues
                          option(value="proteina_animal") Proteina Animal
                          option(value="proteina_vegetal") Proteina Vegetal
                          option(value="carbohidratos") Carbohidratos
                          option(value="verduras") Verduras
                          option(value="frutas") Frutas
                    .col-12
                      button.btn.btn-primary.px-4.float-end.mt-4(type='submit') Save
              .col-md-5.ps-0.d-none.d-md-block
                .form-right.h-100.bg-primary.text-white.text-center.pt-5
                  i.bi.bi-bootstrap
                  h2.fs-1 #{message}
          p.text-end.text-secondary.mt-3 A Henry and Ignacio Project
