extends layout

block content
  .base_page.bg-light
    .pad_mod
      h1= title
      hr
      - let pos=0
      each recipe in recipesObject
        - pos++
        img(src=`/images/${recipe.img}` alt=`${recipe.img}` class="img")
        //div(class="fakeimg2") #{recipe.img}
        a.btn.btn-primary.px-4.float-end.mt-4(role='button' href='/recipes/read/'+recipe._id) View
        p
          b No.:
          | #{pos}
        p
          b Titulo
          |  #{recipe.title}
        b Related Issues
        each issue in recipe.relatedIssues
          p
              | &dot;  #{issue}
          p
        b Principal Ingredient
        each ingredient in recipe.ingredients
          p
              | &dot;  #{ingredient}
          p
        hr
        hr
        hr
      hr