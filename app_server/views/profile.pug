extends layout

block content
  .base-page.bg-light
    .container
      .row
        .col-lg-10.offset-lg-1
          h3.mb-3 #{title}
          .bg-white.shadow.rounded
            .row
              .col-md-7.pe-0
                .form-left.h-100.py-5.px-5
                  form.row.g-4(action, method="post", role="form")
                    .col-12
                      label
                        | Nombre de Usuario
                        span.text-danger *
                      .input-group
                        .input-group-text
                          i.bi.bi-person-fill
                        input.form-control(type='text' name="username" value=username placeholder=`${username}`)
                    .col-12
                      label
                        | Email
                        span.text-danger *
                      .input-group
                        .input-group-text
                          i.bi.bi-person-fill
                        input.form-control(type='text' name="email" value=email placeholder=`${email}`)
                    .col-12
                      label
                        | Nueva Contraseña
                        span.text-danger *
                      .input-group
                        .input-group-text
                          i.bi.bi-lock-fill
                        input.form-control(type='text' name="password" placeholder='Ingresa Nueva Contraseña')
                    .col-12
                      label
                        | Confirmar Nueva Contraseña
                        span.text-danger *
                      .input-group
                        .input-group-text
                          i.bi.bi-person-fill
                        input.form-control(type='text' name="cpassword" placeholder='Confirma Nueva Contraseña')
                    .col-12
                      label
                        | Actializar Categorias
                        span.text-danger *
                      .input-group
                        .input-group-text
                          i.bi.bi-person-fill
                        select#relatedIssues.form-select(name="relatedIssues", multiple, aria-label="multiple select issues")
                          //option(selected) Select Issues
                          option(value="Diabetes") Diabetes
                          option(value="Anemia") Anemia
                          option(value="Obesidad") Obesidad
                          option(value="Posparto") Posparto
                          option(value="Issue 1") Problema 1
                          option(value="Issue 2") Problema 2
                          option(value="Issue 3") Problema 3
                    .col-6
                      .input-group
                        input.form-control(type='text' name="id" value=id placeholder=`${id}`)
                    .col-6
                      .input-group
                        input.form-control(type='text' name="superuser" value=superuser placeholder=`${superuser}`)
                    .col-12
                      button.btn.btn-primary.px-4.float-end.mt-2(type='submit' name="action" value="update") Guardar Cambios
                    .col-12
                      button.btn.btn-secondary.px-4.float-end.mt-2(type='submit' name="action" value="signout") Cerrar Sesión
                    .col-12
                      div
                    .col-12
                      div
                    .col-12
                      div
                    .col-12
                      button.btn.btn-danger.px-4.float-end.mt-2(type='submit' name="action" value="delete") Eliminar Cuenta
              .col-md-5.ps-0.d-none.d-md-block
                .form-right.h-100.bg-primary.text-white.text-center.pt-5
                  i.bi.bi-bootstrap
                  h2.fs-1 #{message}
                  hr
                  hr
                  hr
                  hr
                  hr
                  hr
                  - let pos=0
                  h3 Related Problems
                  hr
                  each issue in relatedIssues
                    - pos++
                    p
                      b Issue 
                        b #{pos}:
                      |  #{issue}
                    p
                    hr
                  hr
                  hr
                  hr
                  hr

          p.text-end.text-secondary.mt-3 Un proyecto de Henry Salazar y Sebastian Bustillos