extends layout

block content
  .base_page.bg-light
      .pad_mod
        .col-md-6
          label.form-label() Add Recipe ->
          a.btn.btn-primary.space.text-warning(role='button' text="Add" href='/recipes/add/')
  .base_page.bg-light
    .pad_mod
      h1= title
      p Welcome to #{title}
      hr
      h4 Listado de recetas
      hr
      - let pos=0
      each recipe in recipes
        - pos++
        div(class="fakeimg2") #{recipe.img}
        a.btn.btn-primary.px-4.float-end.mt-4(role='button' href='/recipes/read/'+recipe._id) View
        
        p
          
          b No.:
          | #{pos}
        p
          b Titulo
          |  #{recipe.title}
        b Related Issues
        each issue in recipe.relatedIssues
          p
              | &dot;  #{issue}
          p
        b Principal Ingredient
        each ingredient in recipe.ingredients
          p
              | &dot;  #{recipe.ingredients}
          p
        hr
        hr
        hr
      hr