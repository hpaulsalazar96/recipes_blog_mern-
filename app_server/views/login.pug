doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/card.css')
    
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js")
  script.
    $(".navbar-nav .nav-link").on("click", function(){
    $(".nav").find(".active").removeClass("active");
    $(this).addClass("active");
    });

block header
  nav(class="navbar fixed-top navbar-expand-xl navbar-dark bg-dark")
      .container-fluid
        a(class="navbar-brand active" href="/") Nutri Care
        button(class="navbar-toggler" type="button" 
            data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" 
            aria-controls="navbarNavAltMarkup" aria-expanded="false" 
            aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse" id="navbarNavAltMarkup", class="container")
          div(class="col")
          div(class="navbar-nav")
              a(class="nav-link" href="/recipes") Recetas
              a(class="nav-link" href="/profile") Perfil
              a(class="nav-link" href="/contact") Contactar
          if !isLoggedIn
            div(class="col")
            div(class="navbar-nav")
                a(class="nav-link" href="/signup") SignUp
        form.form-inline.my-3.my-lg-0(action='/recipes/search', method='post', role='form')
          div(class="collapse navbar-collapse" id="navbarNavAltMarkup", class="container")
            div(class="col")
            div(class="navbar-nav")
              input.form-control.mr-sm-2(type="text", name ="filter", placeholder="Search" aria-label="Search")
              //a.btn.btn-outline-success.my-2.my-sm-0(role='button', href=`/recipes/search/`) Buscar
              button.btn.btn-outline-primary(type='submit') Buscar

block content
.base-page
  style.
    @import url('https://fonts.googleapis.com/css2?family=Open+Sans&display=swap');
  .container
    .row
      .col-lg-10.offset-lg-1
        h3.mb-3(style="font-family: 'Open Sans', sans-serif; font-weight: 600;") #{title}
        .bg-dark.shadow.rounded.py-5.px-5
          form(action="", method="post", role="form")
            .form-group
              label(for="username", style="font-family: 'Open Sans', sans-serif; font-weight: 600; color: #fff;") 
                | Username
                span.text-danger *
              .input-group.mb-3
                .input-group-prepend
                  
                input.form-control(type="text", name="username", placeholder="Enter Username", style="font-family: 'Open Sans', sans-serif; color: #fff; background-color: transparent; border-color: #fff;")
            .form-group.mb-4
              label(for="password", style="font-family: 'Open Sans', sans-serif; font-weight: 600; color: #fff;") 
                | Password
                span.text-danger *
              .input-group.mb-3
                .input-group-prepend
                input.form-control(type="password", name="password", placeholder="Enter Password", style="font-family: 'Open Sans', sans-serif; color: #fff; background-color: transparent; border-color: #fff;")
            .form-check.mb-4
              input#inlineFormCheck.form-check-input(type="checkbox")
              label.form-check-label(for="inlineFormCheck", style="font-family: 'Open Sans', sans-serif; font-weight: 600; color: #fff;") Remember me
            button.btn.btn-primary.btn-block.px-4(type="submit", style="background-color: light-blue; border-color: blue; font-family: 'Open Sans', sans-serif; font-weight: 600;") Login
        .col-md-5.ps-0.d-none.d-md-block
          .form-right.h-100
        p.text-end.text-secondary.mt-3(style="font-family: 'Open Sans', sans-serif;") A Henry and Ignacio Project


