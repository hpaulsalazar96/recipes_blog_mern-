doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js")

  script.
    $(".navbar-nav .nav-link").on("click", function(){
    $(".nav").find(".active").removeClass("active");
    $(this).addClass("active");
    });

block header
  nav(class="navbar fixed-top navbar-expand-xl navbar-dark bg-dark")
      .container-fluid
        a(class="navbar-brand active" href="/") Nutri Care
        button(class="navbar-toggler" type="button" 
            data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" 
            aria-controls="navbarNavAltMarkup" aria-expanded="false" 
            aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse" id="navbarNavAltMarkup", class="container")
          div(class="col")
          div(class="navbar-nav")
              a(class="nav-link" href="/recipes") Recetas
              a(class="nav-link" href="/profile") Perfil
              a(class="nav-link" href="/contact") Contactar
          if !isLoggedIn
            div(class="col")
            div(class="navbar-nav")
                a(class="nav-link" href="/signup") SignUp
        form.form-inline.my-3.my-lg-0(action='/recipes/search', method='post', role='form')
          div(class="collapse navbar-collapse" id="navbarNavAltMarkup", class="container")
            div(class="col")
            div(class="navbar-nav")
              input.form-control.mr-sm-2(type="text", name ="filter", placeholder="Search" aria-label="Search")
              //a.btn.btn-outline-success.my-2.my-sm-0(role='button', href=`/recipes/search/`) Buscar
              button.btn.btn-outline-primary(type='submit') Buscar

block content
  .base-page.bg-light
    .container
      .row
        .col-lg-10.offset-lg-1
          h3.mb-3 #{title}
          .bg-white.shadow.rounded
            .row
              .col-md-7.pe-0
                .form-left.h-100.py-5.px-5
                  form.row.g-4(action, method="post", role="form")
                    .col-12
                      label
                        | Username
                        span.text-danger *
                      .input-group
                        .input-group-text
                          i.bi.bi-person-fill
                        input.form-control(type='text' name="username" placeholder='Enter Username')
                    .col-12
                      label
                        | Password
                        span.text-danger *
                      .input-group
                        .input-group-text
                          i.bi.bi-lock-fill
                        input.form-control(type='password' name="password" placeholder='Enter Password')
                    .col-sm-6
                      .form-check
                        input#inlineFormCheck.form-check-input(type='checkbox')
                        label.form-check-label(for='inlineFormCheck') Remember me
                    .col-sm-6
                      a.float-end.text-primary(href='#') Forgot Password?
                    .col-12
                      button.btn.btn-primary.px-4.float-end.mt-4(type='submit') login
              .col-md-5.ps-0.d-none.d-md-block
                .form-right.h-100.bg-primary.text-white.text-center.pt-5
                  i.bi.bi-bootstrap
                  h2.fs-1 #{message}
          p.text-end.text-secondary.mt-3 A Henry and Ignacio Project

footer
  .text-center.p-7
    | &copy; 2023 Copyright  Instagram: 
    a.text-dark(href='/') @nutri.care

